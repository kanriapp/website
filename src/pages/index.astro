---
import Hero from "@/components/sections/Hero.astro"
import BaseLayout from "@/layouts/BaseLayout.astro"

import { motion } from "framer-motion"
---

<BaseLayout>
  <div class="relative">
    <Hero />
    <motion.div
      initial={{ opacity: 0 }}
      animate={{ opacity: 0.3 }}
      transition={{ duration: 0.6, ease: "easeOut", delay: 1.3 }}
      client:load
      className="absolute top-1/3 left-[5%] w-11/12 h-[600px] bg-primary rounded-full filter blur-[72px] opacity-30"
    >
    </motion.div>
  </div>
</BaseLayout>


